<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>GMaps.js &mdash; Mapa Basico</title>

  
  <script type="text/javascript">
   var map;
   $(document).ready(function(){
     map = new GMaps({
       div: '#map',
       lat: -34.921178,
       lng: -57.954629,
       zoom: 14,
       zoomControl : false,
       panControl : false,
       streetViewControl : false,
       mapTypeControl: false,
       minZoom: 14
     });
     <% @farmacias.each do |x| %>
          map.addMarker({
            lat:<%= x.latitud %>,
            lng: <%=x.longitud%>,
            icon : 'assets/farmredGreenNew.png',

            title: '<%= x.nombre %>',

            click: function(e) {
              swal("<%= x.direccion %>", "You clicked the button!", "success")
            }
          });
          <% end %>

     //map.addMarker({
       //lat: -34.912501,
      // lng: -57.948759,

      // title: 'farmacia ojeda',
      // infoWindow: {
       //  content: 'farmacia ojeda'
     //  }
     //});
   });
 </script>
 <style>
 body{
 font-family: Helvetica, Arial, sans-serif;
 margin:1em;
}
#map{
 display: block;
 width: 94%;
 height: 650px;
 margin: 4em auto;
 -moz-box-shadow: 0px 5px 20px #ccc;
 -webkit-box-shadow: 0px 5px 20px #ccc;
 box-shadow: 0px 5px 20px #ccc;
}

 </style>
</head>
<body>
     <div id="map"></div>
</body>

   </html>
